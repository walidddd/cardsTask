doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Task
        link(rel="stylesheet", href="css/bootstrap.min.css")
        link(rel="stylesheet", href="css/style.css")
        link(rel="stylesheet", href="css/media.css")
    body 
        <!--start nav-->
        div(class="navx")
        <!--start section filtering-->
        section(class="filtering")
            .container 
                div(class="find-customers")
                    .icone 
                        img(src="images/icones/Primary fill.svg", alt="", srcset="")
                    input(type="search", name="customer", id="customer", placeholder="Find customers", onkeyup="filterCustomers()")
                div(class="filter-name", onclick="showSort()")
                    div(class="title-select") 
                        span(id="title-select") Filter by Name 
                        img(src="images/icones/sName.svg", alt="", srcset="")
                    div(class="select", id="selected")
                        ul 
                            li 
                                button(class="sorting" value="(A-Z)" onclick="sort(value)") Name (A-Z)
                            li 
                                button(class="sorting" value="(Z-A)" onclick="sort(value)") Name (Z-A)
        section(class="cards")
            .container 
                div(class="row", id="cards")
                div(class="alert-search d-none" id="alert")
                     
                    
                    


                    





                    
        script(src="./js/jquery-3.3.1.min.js") 
        script(src="js/main.js") 

